<!DOCTYPE html>
<html>

<head>
    <meta charset="UTF-8">
    <title>{% block title %}Welcome!{% endblock %}</title>
    {# Run `composer require symfony/webpack-encore-bundle`
    and uncomment the following Encore helpers to start using Symfony UX #}

    <link href="{{ asset('css/bootstrap.min.css') }}" type="text/css" rel="stylesheet" />
    <link href="{{ asset('css/sweetalert2.min.css') }}" type="text/css" rel="stylesheet" />
    {% block stylesheets %}{% endblock %}

</head>

<body>
    {% block nav %}
    {% if app.request.attributes.get('_route') != 'login' %}
    <nav class="navbar navbar-light bg-light">
        <div class="container-fluid">
            <a class="navbar-brand" href="#">
                <img src="{{ asset('images/logoYota.png') }}" alt="" class="d-inline-block align-text-top" width="30"
                    height="24">
                {% block User %}{% endblock %}
            </a>
            <ul class="nav justify-content-end nav-pills nav-fill">
                <li class="nav-item">
                    <a class="nav-link active" href="{{ path('gestiones') }}">Crear gestiones</a>
                </li>
                <li class="nav-item mx-4">
                    <a class="nav-link active" href="{{ path('tiket') }}">Tikets</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="{{ path('logout') }}">Log out</a>
                </li>
            </ul>
        </div>
    </nav>
    {% endif %}
    {% endblock %}
    {% block body %}{% endblock %}
    <script src="{{ asset('js/bootstrap.min.js') }}"></script>
    <script src="{{ asset('js/sweetalert2.all.min.js') }}"></script>

    {% block javascripts %}{% endblock %}
</body>

</html>